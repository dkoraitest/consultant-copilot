# ================================================
# Consultant Copilot - Environment Variables
# ================================================
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=postgresql://copilot:your_password@localhost:5432/copilot
DB_PASSWORD=your_password

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false
WEBHOOK_URL=https://your-domain.com

# Telegram Bot - Summary (required)
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...
TELEGRAM_ADMIN_CHAT_ID=123456789

# Telegram Bot - Q&A (required for RAG)
QA_BOT_TOKEN=123456:ABC-DEF...

# Telegram User API (optional, for Stage 2 - history access)
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_SESSION=

# Fireflies (required for meeting transcripts)
FIREFLIES_API_KEY=your_fireflies_api_key

# Todoist (optional)
TODOIST_API_TOKEN=
TODOIST_DEFAULT_PROJECT_ID=

# Claude API (required)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI (required for RAG embeddings)
OPENAI_API_KEY=sk-...

# Notion (optional, for migration only)
NOTION_TOKEN=
NOTION_DATABASE_ID=
